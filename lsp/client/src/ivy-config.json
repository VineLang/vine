{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["(", ")"]
  ],
  "colorizedBracketPairs": [],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "(", "close": ")" }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["{", "}"]
  ],
  "wordPattern": {
    "pattern": "(::\\p{ID_Continue}+)+|\\p{ID_Start}\\p{ID_Continue}*",
    "flags": "ug"
  }
}
