{
  "name": "vine",
  "patterns": [
    { "include": "#line-comment" },
    { "include": "#block-comment" }
  ],
  "scopeName": "source.vine",
  "repository": {
    "line-comment": {
      "match": "//.*",
      "name": "comment.line.double-slash.vine"
    },
    "block-comment": {
      "begin": "/\\*",
      "end": "\\*/",
      "name": "comment.block.vine",
      "patterns": [{ "include": "#block-comment" }]
    }
  }
}
