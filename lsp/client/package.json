{
  "name": "vine",
  "displayName": "Vine",
  "description": "Language support for the Vine programming language",
  "publisher": "vinelang",
  "version": "0.0.0",
  "repository": "https://github.com/VineLang/vine",
  "icon": "assets/vine.png",
  "galleryBanner": {
    "color": "#151820",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "devDependencies": {
    "@types/emscripten": "^1.41.5",
    "@types/node": "^22.9.0",
    "@types/vscode": "^1.95.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "web-tree-sitter": "^0.25.10"
  },
  "scripts": {
    "build-tree-sitter": "cd ../tree-sitter-vine; npm i; tree-sitter generate; tree-sitter build --wasm; cp queries/highlights.scm tree-sitter-vine.wasm ../client/dist",
    "build": "npm run build-tree-sitter; tsc"
  },
  "main": "dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "vine",
        "extensions": [
          ".vi"
        ],
        "configuration": "src/vine-config.json",
        "icon": {
          "dark": "assets/vine.png",
          "light": "assets/vine.png"
        }
      },
      {
        "id": "ivy",
        "extensions": [
          ".iv"
        ],
        "configuration": "src/ivy-config.json",
        "icon": {
          "dark": "assets/ivy.png",
          "light": "assets/ivy.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "vine",
        "scopeName": "source.vine",
        "path": "src/vine-grammar.json"
      },
      {
        "language": "ivy",
        "scopeName": "source.ivy",
        "path": "src/ivy-grammar.json"
      }
    ],
    "commands": [
      {
        "command": "vine.restartServer",
        "title": "Vine: Restart Server"
      }
    ],
    "configuration": {
      "title": "Vine",
      "properties": {
        "vine.lspOptions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "vine.cli": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "vine"
          ]
        },
        "vine.entrypoints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "configurationDefaults": {
      "[vine]": {
        "editor.semanticHighlighting.enabled": true
      }
    }
  }
}
