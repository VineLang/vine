//                 print(f"{a} % {b_str} = {r_str}")
//                 print(f"{a}.div_rem_n32({b_str}) = ({q}, {r_str})")
// ```

pub fn main(&io: &IO) {
  let edges = [0, 1, N32::maximum];

  for a_sign in [false, true].into_iter() {
    for a0 in edges.into_iter() {
      for a1 in edges.into_iter() {
        let a = Int::from_parts(a_sign, Nat::from_parts([a0, a1]));
        for b_sign in [false, true].into_iter() {
          for b0 in edges.into_iter() {
            for b1 in edges.into_iter() {
              let b = Int::from_parts(b_sign, Nat::from_parts([b0, b1]));
              io.println("{a} + {b} = {a + b}");
              io.println("{a} - {b} = {a - b}");
              io.println("{a} * {b} = {a * b}");
              match a.cmp(&b) {
                Ord::Lt { io.println("{a} < {b}") }
                Ord::Eq { io.println("{a} = {b}") }
                Ord::Gt { io.println("{a} > {b}") }
              }
            }
          }
        }

        for b in [I32::minimum, -1, +1, +2, I32::maximum].into_iter() {
          io.println("{a} / {b} = {a / b}");
          io.println("{a} % {b} = {a % b}");
          io.println("{a}.div_rem_n32({b}) = {a.div_rem_n32(b).show()}");
        }
      }
    }
  }
}
