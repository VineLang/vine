
use std::option::Option::{Option, Some, None};

#[builtin = "List"]
pub struct List[T](N32, Buf[T], ~Buf[T]);

pub(std) struct Buf[T](T, Buf[T]);

pub type String = List[Char];

pub mod List {
  pub fn len[T](&List(len, _, _): &List[T]) -> N32 {
    len
  }

  pub fn get[T](&List(len, *buf, _): &List[T], i: N32) -> &T {
    while i != 0 {
      let &Buf(_, *tail) = buf;
      buf = tail;
      i -= 1;
    }
    let &Buf(*head, _) = buf;
    head
  }

  pub fn map[T, U](List(l, buf, ~_): List[T], f: fn(T) -> U) -> List[U] {
    let len = l;
    let cur;
    let result = move ~cur;
    while l != 0 {
      let Buf(head, tail) = buf;
      buf = tail;
      let next;
      ~cur = Buf(f(head), move ~next);
      ~next = move ~cur;
      l -= 1;
    }
    List(len, result, move cur)
  }

  pub fn pop_front[T](&List(len, buf, _): &List[T]) -> Option[T] {
    if len != 0 {
      len -= 1;
      let Buf(head, tail) = buf;
      buf = tail;
      Some(head)
    } else {
      None
    }
  }

  #[builtin = "concat"]
  pub fn concat[T](a: List[T], b: List[T]) -> List[T] {
    let List(a_len, a_buf, ~a_end) = a;
    let List(b_len, b_buf, ~b_end) = b;
    a_end = b_buf;
    List(a_len + b_len, a_buf, move ~b_end)
  }

  pub fn push_back[T](&list: &List[T], el: T) {
    list ++= [el];
  }

  pub fn push_front[T](&list: &List[T], el: T) {
    list = [el] ++ list;
  }

  pub fn insert[T](&List(len, *buf, _): &List[T], i: N32, el: T) {
    len += 1;
    while i != 0 {
      let &Buf(_, *tail) = buf;
      buf = tail;
      i -= 1;
    }
    let &buf = buf;
    buf = Buf(el, buf);
  }

  pub fn join(list: List[String], sep: String) -> String {
    let it = list.into_iter();
    if it.next() is Some(str) {
      while it.next() is Some(val) {
        str ++= sep ++ val;
      }
      str
    } else {
      ""
    }
  }

  pub fn to_string[T](list: List[T], elem_to_string: fn(T) -> String) -> String {
    "[" ++ list.map(elem_to_string).join(", ") ++ "]"
  }

  pub fn sort_by[T](&self: &List[T], cmp: fn(&T, &T) -> Bool) {
    let output = [];
    while self.pop_front() is Some(a) {
      let left = [];
      while output.pop_front() is Some(b) {
        if cmp(&a, &b) {
          output.push_front(b);
          break;
        } else {
          left.push_back(b);
        }
      }
      output = left ++ [a] ++ output;
    }
    self = output;
  }

  pub struct Iter[T](N32, &Buf[T]);

  pub fn iter[T](&List(len, buf, _): &List[T]) -> Iter[T] {
    Iter(len, &buf)
  }

  pub mod Iter {
    pub fn next[T](&Iter(len, buf): &Iter[T]) -> Option[&T] {
      if len != 0 {
        len -= 1;
        let &Buf(*head, *tail) = buf;
        buf = tail;
        Some(head)
      } else {
        let &_ = move buf;
        None
      }
    }

    pub fn drop[T](&Iter(_, move &_): &Iter[T]) {}
  }

  pub struct IntoIter[T](N32, Buf[T]);

  pub fn into_iter[T](List(len, buf, _): List[T]) -> IntoIter[T] {
    IntoIter(len, buf)
  }

  pub mod IntoIter {
    pub fn next[T](&IntoIter(len, buf): &IntoIter[T]) -> Option[T] {
      if len != 0 {
        len -= 1;
        let Buf(head, tail) = buf;
        buf = tail;
        Some(head)
      } else {
        None
      }
    }
  }

  pub fn split(self: String, sep: String) -> List[String] {
    let list = [];
    loop {
      let (found, remaining) = self.split_once(sep);
      list ++= [found];
      if remaining is Some(remaining) {
        self = remaining;
      } else {
        return list;
      }
    }
  }

  pub fn split_trim(self: String, sep: String) -> List[String] {
    let list = [];
    let start = true;
    let ~end = true;
    loop {
      let (found, remaining) = self.split_once(sep);
      let empty = found.len() == 0;
      start = empty && start;
      if !start && !~end {
        list ++= [found];
      }
      ~end ~= empty && ~end;
      if remaining is Some(remaining) {
        self = remaining;
      } else {
        return list;
      }
    }
  }

  pub fn split_once(self: String, sep: String) -> (String, Option[String]) {
    let prefix = "";
    let suffix = self;
    while suffix.len() >= sep.len() {
      let iter_a = sep.iter();
      let iter_b = suffix.iter();
      do.check {
        while iter_a.next() is Some(&a) && iter_b.next() is Some(&b) {
          if a != b {
            break.check;
          }
        }
        let Iter(len, &buf) = move iter_b;
        let List(_, _, end) = suffix;
        return (prefix, Some(List(len, move buf, end)));
      }
      iter_a.drop();
      iter_b.drop();
      if suffix.pop_front() is Some(char) {
        prefix ++= [char];
      } else {
        break;
      }
    }
    (prefix ++ suffix, None)
  }

  pub fn eq(&self: &String, &other: &String) -> Bool {
    if self.len() != other.len() {
      return false;
    }
    let iter_a = self.iter();
    let iter_b = other.iter();
    while iter_a.next() is Some(&a) && iter_b.next() is Some(&b) {
      if a != b {
        return false;
      }
    }
    true
  }
}
