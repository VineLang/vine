
use std::{io::{prompt, println}, u32, option::Option::{Some, None}};

fn main(&io: &IO) {
  while io.prompt("> ") is Some(line) {
    let num = u32::parse(line);
    io.println(match num {
      Some(num) => u32::to_string(fib(num)),
      None => "invalid number",
    });
  }
}

fn fib(n: u32) -> u32 {
  let a = 0;
  let b = 1;
  while n {
    n -= 1;
    (a, b) = (b, a + b);
  }
  a
}
